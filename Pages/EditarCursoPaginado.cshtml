@page
@model WebAppControlCursos.Pages.EditarCursoPaginadoModel
@{
    ViewData["Title"] = "Editar";
}


<h1 class="display-4">@Model.Course.Name</h1>
&nbsp;

<form method="post">
    <input type="hidden" asp-for="@Model.Course.Id"/>
    <div class="form-group">
        <label for="formGroupExampleInput" asp-for="Course.Name"></label>
        <input type="text" class="form-control" placeholder="Name input" asp-for="Course.Name">
        <span class="text-danger" asp-validation-for="Course.Name"></span>
    </div>

    <div class="form-group">
        <label for="formGroupExampleInput" asp-for="Course.Description"></label>
        <textarea class="form-control" placeholder="Description textarea" asp-for="Course.Description"></textarea>
        <span class="text-danger" asp-validation-for="Course.Description"></span>
    </div>
    
    <div class="form-group">
        <label for="formGroupExampleInput" asp-for="Course.Teacher"></label>
        <input type="text" class="form-control" placeholder="Teacher input" asp-for="Course.Teacher">
        <span class="text-danger" asp-validation-for="Course.Teacher"></span>
    </div>

    <div class="form-group">
        <label for="formGroupExampleInput" asp-for="Course.Uri"></label>
        <input type="text" class="form-control" placeholder="Uri input" asp-for="Course.Uri">
        <span class="text-danger" asp-validation-for="Course.Uri"></span>
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a class="btn btn-secondary" asp-page="CursosPaginado">Regresar</a>
</form>
