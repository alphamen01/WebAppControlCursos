@page
@model WebAppControlCursos.Pages.DetalleCursoModel
@{
    ViewData["Title"] = "DetalleCurso";
}
<div class="text-center">
    <h1 class="display-4">@Model.Course.Name</h1>
    &nbsp;
    <div class="card text-center">

        <div class="card-header">
            Descripcion
        </div>
        <div class="card-text">
            @Model.Course.Description
        </div>

    </div>
    &nbsp;
    <div class="card text-center">

        <div class="card-header">
            Docente
        </div>
        <div class="card-text">
            @Model.Course.Teacher
        </div>

    </div>
    &nbsp;
    <div class="card text-center">

        <div class="card-header">
            Direccion
        </div>
        <div class="card-text">
            @Model.Course.Uri
        </div>

    </div>
    &nbsp;

    <div>
        <a asp-page="Cursos" class="btn btn-primary">Ver la lista completa de Cursos</a>
    </div>
    &nbsp;
    <div class="table-responsive">
        <table class="table">
            
            @{
                if (Model.Materials != null && Model.Materials.Count > 0)
                {
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">NOMBRES</th>
                            <th scope="col">DESCRIPCION</th>
                        </tr>
                    </thead>

                    @foreach (var material in Model.Materials)
                    {
                        <tdbody>
                            <tr>
                                <th scope="col">@material.Id</th>
                                <th scope="col">@material.Name</th>
                                <th scope="col">@material.Description</th>
                            </tr>
                        </tdbody>
                    }
                }
                else
                {
                    
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">EL CURSO NO CUENTA CON MATERIALES.</th>
                        </tr>
                    </thead>
                }
            }
                
        </table>
    </div>

</div> 